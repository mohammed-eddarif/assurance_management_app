<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradien_background"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".loginRegister.activities.ContactRequest">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="#6A43B1"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/title1"
                android:textColor="#fff"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.436"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_champ"
                android:textColorHint="#bdd4e7"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:padding="10dp" />

            <EditText
                android:id="@+id/first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_champ"
                android:textColorHint="#bdd4e7"                android:hint="First Name"
                android:inputType="textPersonName"
                android:padding="10dp"/>

            <EditText
                android:id="@+id/Birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_champ"
                android:textColorHint="#bdd4e7"                android:hint="Birthday"
                android:inputType="date"
                android:padding="10dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>

            <EditText
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_champ"
                android:textColorHint="#bdd4e7"                android:hint="City"
                android:inputType="text"
                android:padding="10dp" />

            <EditText
                android:id="@+id/tele"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_champ"
                android:textColorHint="#bdd4e7"       android:hint="Phone"
                android:inputType="phone"
                android:padding="10dp" />

            <EditText
                android:id="@+id/numPermis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_champ"
                android:textColorHint="#bdd4e7"    android:hint="Permit number"
                android:inputType="number"
                android:padding="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="#6A43B1"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/title2"
                android:textColor="#fff"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.436"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/immat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_champ"
                android:textColorHint="#bdd4e7"
                android:hint="Registered"
                android:inputType="text"
                android:padding="10dp" />

            <EditText
                android:id="@+id/module"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_champ"
                android:textColorHint="#bdd4e7"                android:hint="Module"
                android:inputType="text"
                android:padding="10dp" />

            <EditText
                android:id="@+id/marque"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_champ"
                android:textColorHint="#bdd4e7"        android:hint="Mark"
                android:inputType="text"
                android:padding="10dp" />

            <EditText
                android:id="@+id/carburant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_champ"
                android:textColorHint="#bdd4e7"       android:hint="Fuel"
                android:inputType="text"
                android:padding="10dp" />

            <EditText
                android:id="@+id/puissance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_champ"
                android:textColorHint="#bdd4e7"      android:hint="PowerFul"
                android:inputType="number"
                android:padding="10dp" />
            <EditText
                android:id="@+id/dateMisEnCirculation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_champ"
                android:textColorHint="#bdd4e7"
                android:hint="Date put en circulation"
                android:inputType="date"
                android:padding="10dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="#6A43B1"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/title3"
                android:textColor="#fff"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.436"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_champ"
                android:hint="Contract Type"
                android:inputType="text"
                android:padding="10dp"
                android:textColorHint="#bdd4e7" />


            <EditText
                android:id="@+id/dateDemande"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_champ"
                android:hint="Date Request"
                android:inputType="date"
                android:padding="10dp"
                android:textColorHint="#bdd4e7"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>

            <Button
                android:id="@+id/btnNext"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_title"
                android:text="Submit"
                android:textSize="20dp"
                android:layout_marginBottom="50dp"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
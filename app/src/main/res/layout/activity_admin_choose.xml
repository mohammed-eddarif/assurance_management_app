<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nestedScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradien_background"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="50dp"
    android:theme="@style/noActionBar"

    tools:context=".loginRegister.activities.ChooseActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginBottom="50sp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/mya01" />



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/appCompatButtonRequest"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/radius_btn"
            android:text="@string/text_request"
            android:textColor="@color/white" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/appCompatSignOut"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/radius_btn"
            android:text="@string/text_signOut"
            android:textColor="@color/white" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</FrameLayout>
